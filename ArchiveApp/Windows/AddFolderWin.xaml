<Window x:Class="ArchiveApp.Windows.AddFolderWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchiveApp.Windows"
        mc:Ignorable="d"
        Title="Добавить папку" Height="350" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите название папки" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0,20" />

            <TextBox Name="NameTxb" Grid.Row="1" Width="300" Height="30" HorizontalAlignment="Center" Margin="0,10" />

            <Button Name="AddBtnFol" Click="AddBtnFol_Click" Grid.Row="2" Width="120" Height="40" Content="Добавить" HorizontalAlignment="Center" Margin="0,20" Background="#FF4CAF50" Foreground="White" FontWeight="Bold" FontSize="16" BorderThickness="0" />
        </StackPanel>
    </Grid>
</Window>
