<Page x:Class="ArchiveApp.Pages.MenuButtons"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArchiveApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuButtons">

    <Grid>
        <StackPanel x:Name="MenuButton">
            <Button Name="BtnAdd" Content="Добавить папку" Style="{StaticResource MenuButtonStyle}" />
            <Button Name="BtnAddFile"  Content="Добавить файл" Style="{StaticResource MenuButtonStyle}" />
            <Button Name="BtnModify" Content="Изменить файл" Style="{StaticResource MenuButtonStyle}" />
            <Button Name="BtnDelete" Click="BtnDelete_Click" Content="Удалить файл" Style="{StaticResource MenuButtonStyle}" />
        </StackPanel>
    </Grid>
</Page>
